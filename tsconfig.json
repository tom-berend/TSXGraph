{
  "compilerOptions": {
    "module":"None",
    "noImplicitAny": true,
    "declaration": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "outFile":"dest/tsc.js",
    "sourceMap": true,
    "allowJs": true
  },
  "comment":"order of includes is important because dont have separate test lib yet",
  "include": ["index.d.ts","dest/tsc.d.ts", "src/**/*" ],

  "exclude": ["dest/*.*","**/*.spec.ts"],

   "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "excludeDirectories": ["**/node_modules", "_build"],
  }
}